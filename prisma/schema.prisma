generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LegacyDevices {
  id               String    @id @default(uuid())
  ward             String
  wardName         String?
  hospital         String
  hospitalName     String?
  sn               String    @unique
  seq              Int       @unique
  name             String
  lastInsert       DateTime?
  lastTemp         Float?
  lastNotification DateTime?
  lastEvent        String?
  door             Boolean   @default(false)
  plug             Boolean   @default(false)
  ip               String?
  events           LegacyEvents[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model LegacyEvents {
  id        String   @id @default(uuid())
  deviceId  String
  probe     String
  event     String
  type      String
  tag       EventType?  @default(LINE)
  device    LegacyDevices  @relation(fields: [deviceId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([deviceId])
}

model SummaryEvents {
  id           String   @id @default(uuid())
  log          Int
  notification Int
  date         String
  tag          EventType
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum EventType {
  LINE
  SMTRACK
}
